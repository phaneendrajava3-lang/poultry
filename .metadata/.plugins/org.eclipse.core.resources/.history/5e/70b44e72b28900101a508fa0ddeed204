<script>
// Simple SVG truck animation
function animateVehicle() {
  var vehicle = document.getElementById('vehicle-animation');
  if (!vehicle) return;
  vehicle.innerHTML = `<svg width="60" height="40" viewBox="0 0 60 40" fill="none" xmlns="http://www.w3.org/2000/svg">
    <rect x="5" y="15" width="30" height="15" rx="3" fill="#1976d2" stroke="#1565c0" stroke-width="2"/>
    <rect x="35" y="20" width="15" height="10" rx="2" fill="#64b5f6" stroke="#1976d2" stroke-width="2"/>
    <circle cx="15" cy="33" r="5" fill="#222" stroke="#fff" stroke-width="2"/>
    <circle cx="45" cy="33" r="5" fill="#222" stroke="#fff" stroke-width="2"/>
  </svg>`;
  var topnav = document.querySelector('.topnav');
  var start = -60;
  var end = topnav.offsetWidth - 60;
  var pos = start;
  function frame() {
    pos += 2;
    vehicle.style.left = pos + 'px';
    if (pos < end) {
      requestAnimationFrame(frame);
    } else {
      setTimeout(() => {
        pos = start;
        requestAnimationFrame(frame);
      }, 800);
    }
  }
  frame();
}
document.addEventListener('DOMContentLoaded', animateVehicle);
</script>