<!-- Bootstrap & Script -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function viewUser(username, email, role) {
        document.getElementById("viewUsername").innerText = username;
        document.getElementById("viewEmail").innerText = email;
        document.getElementById("viewRole").innerText = role;
        new bootstrap.Modal(document.getElementById('viewModal')).show();
    }

    function editUser(id, username, email, role) {
        document.getElementById("editId").value = id;
        document.getElementById("editUsername").value = username;
        document.getElementById("editEmail").value = email;
        document.getElementById("editRole").value = role;
        document.getElementById("editPassword").value = "";
        document.getElementById("editConfirmPassword").value = "";
        new bootstrap.Modal(document.getElementById('editModal')).show();
    }

    function togglePassword(id) {
        const el = document.getElementById(id);
        el.type = el.type === 'password' ? 'text' : 'password';
    }

    // Match validation
    function validatePasswordMatch(form, isEdit) {
        const pwdEl = form.querySelector('input[name="password"]');
        const confEl = form.querySelector('input[name="confirmPassword"]');
        const pwd = pwdEl ? pwdEl.value : "";
        const confirmPwd = confEl ? confEl.value : "";

        // Edit: allow both blank (means don't change password)
        if (isEdit && pwd === "" && confirmPwd === "") {
            return true;
        }

        if (pwd !== confirmPwd) {
            const msg = form.querySelector(isEdit ? '#editPwdMismatch' : '#addPwdMismatch');
            if (msg) { msg.classList.remove('d-none'); }
            else { alert("Passwords do not match."); }
            return false;
        }

        const msg = form.querySelector(isEdit ? '#editPwdMismatch' : '#addPwdMismatch');
        if (msg) { msg.classList.add('d-none'); }
        return true;
    }

    // Live feedback on add form
    const addPwd = document.getElementById('password');
    const addConfirm = document.getElementById('confirmPassword');
    if (addPwd && addConfirm) {
        addConfirm.addEventListener('input', () => validatePasswordMatch(addConfirm.closest('form'), false));
        addPwd.addEventListener('input', () => validatePasswordMatch(addPwd.closest('form'), false));
    }
    // Live feedback on edit form
    const editPwd = document.getElementById('editPassword');
    const editConfirm = document.getElementById('editConfirmPassword');
    if (editPwd && editConfirm) {
        editConfirm.addEventListener('input', () => validatePasswordMatch(editConfirm.closest('form'), true));
        editPwd.addEventListener('input', () => validatePasswordMatch(editPwd.closest('form'), true));
    }
</script>
</body>
</html>
