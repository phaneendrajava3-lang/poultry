package com.poultry.repository;

import java.time.LocalDate;
import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.poultry.model.Customer;
import com.poultry.model.Entry;

public interface EntryRepository extends JpaRepository<Entry, Long> {
    List<Entry> findByCustomer(Customer customer);

    @Query("SELECT e FROM Entry e WHERE (:customerName IS NULL OR LOWER(e.customer.name) LIKE LOWER(CONCAT('%',:customerName,'%'))) AND (:startDate IS NULL OR e.date >= :startDate) AND (:endDate IS NULL OR e.date <= :endDate)")
    List<Entry> filterEntries(@Param("customerName") String customerName, @Param("startDate") LocalDate startDate, @Param("endDate") LocalDate endDate);
}