package com.poultry.controller;

import javax.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RequestHeader;

import java.time.LocalDate;
import java.util.HashMap;
import java.util.Map;

@Controller
public class DashboardController {
    @Autowired private com.poultry.repository.EntryRepository entryRepository;
    @Autowired private com.poultry.repository.TripDetailsRepository tripDetailsRepository;
    @Autowired private com.poultry.repository.VanRepository vanRepository;
    @Autowired private com.poultry.repository.CustomerRepository customerRepository;
    @Autowired private com.poultry.repository.DriverRepository driverRepository;

    @GetMapping("/dashboard")
    @ResponseBody
    public Object dashboard(HttpSession session, Model model,
                           @RequestParam(value = "month", required = false) Integer month,
                           @RequestParam(value = "year", required = false) Integer year,
                           @RequestParam(value = "ajax", required = false) Integer ajax) {
        if (session.getAttribute("loggedInUser") == null) {
            if (ajax != null && ajax == 1) {
                Map<String, Object> resp = new HashMap<>();
                resp.put("redirect", "/login");
                return resp;
            }
            return "redirect:/login";
        }
        java.time.LocalDate now = java.time.LocalDate.now();
        int currentMonth = now.getMonthValue();
        int currentYear = now.getYear();
        if (month == null) month = currentMonth;
        if (year == null) year = currentYear;
        model.addAttribute("selectedMonth", month);
        model.addAttribute("selectedYear", year);
        model.addAttribute("currentMonth", currentMonth);
        model.addAttribute("currentYear", currentYear);
        long totalCustomers = customerRepository.count();
        long totalDrivers = driverRepository.count();
        long totalVans = vanRepository.count();
        long tripsThisMonth = tripDetailsRepository.countByMonth(month, year);
        long entriesThisMonth = entryRepository.countByMonth(month, year);
        Number fuelCost = tripDetailsRepository.sumFuelCostByMonth(month, year);
        Number deadChicks = tripDetailsRepository.sumDeadChicksByMonth(month, year);
        Number entriesAmount = tripDetailsRepository.sumTotalSpentByMonth(month, year);
        Number amountReceived = entryRepository.sumReceivedAmountByMonth(month, year);
        Integer birdsCount = entryRepository.sumBirdCountByMonth(month, year);
        java.util.List<com.poultry.model.TripDetails> recentTrips = tripDetailsRepository.findByMonthAndYear(month, year);
        if (recentTrips.size() > 10) recentTrips = recentTrips.subList(0, 10);
        model.addAttribute("recentTrips", recentTrips);
        if (ajax != null && ajax == 1) {
            Map<String, Object> resp = new HashMap<>();
            resp.put("totalCustomers", totalCustomers);
            resp.put("totalDrivers", totalDrivers);
            resp.put("totalVans", totalVans);
            resp.put("tripsThisMonth", tripsThisMonth);
            resp.put("entriesThisMonth", entriesThisMonth);
            resp.put("fuelCost", fuelCost != null ? fuelCost : 0);
            resp.put("deadChicks", deadChicks != null ? deadChicks : 0);
            resp.put("entriesAmount", entriesAmount != null ? entriesAmount : 0);
            resp.put("amountReceived", amountReceived != null ? amountReceived : 0);
            resp.put("birdsCount", birdsCount != null ? birdsCount : 0);
            return resp;
        }
        return "dashboard";
    }

    @GetMapping("/")
    public String rootRedirect() {
        return "redirect:/dashboard";
    }
}