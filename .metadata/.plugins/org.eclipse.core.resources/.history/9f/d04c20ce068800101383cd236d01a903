<script>
function calculateAmounts() {
  const birdCount = parseFloat(document.querySelector('[name="birdCount"]').value) || 0;
  const unitPrice = parseFloat(document.querySelector('[name="unitPrice"]').value) || 0;
  const extraCharges = parseFloat(document.querySelector('[name="extraCharges"]').value) || 0;
  const receivedAmount = parseFloat(document.querySelector('[name="receivedAmount"]').value) || 0;
  const finalPrice = (birdCount * unitPrice) + extraCharges;
  document.querySelector('[name="finalPrice"]').value = finalPrice.toFixed(2);
  const balanceAmount = finalPrice - receivedAmount;
  document.querySelector('[name="balanceAmount"]').value = balanceAmount.toFixed(2);
}

['birdCount','unitPrice','extraCharges','receivedAmount'].forEach(function(name) {
  document.querySelector('[name="'+name+'"]').addEventListener('input', calculateAmounts);
});
</script>
