<%@ include file="nav.jsp" %>
<div class="container mt-4">
  <div class="card p-4 mb-4 shadow-sm bg-white">
    <h3>Edit Trip Entry</h3>
    <form action="${pageContext.request.contextPath}/entries/edit/${entry.id}" method="post">
      <div class="row g-3">
        <div class="col-md-3">
          <label class="form-label">Date</label>
          <input type="date" name="date" class="form-control" value="${entry.date}" required/>
        </div>
        <div class="col-md-3">
          <label class="form-label">Trip Number</label>
          <select name="tripNumber" class="form-select" required>
            <option value="">-- Select Trip Number --</option>
            <c:forEach var="t" items="${tripDetailsList}">
              <option value="${t.tripNumber}" <c:if test="${t.tripNumber eq entry.tripNumber}">selected</c:if>>${t.tripNumber}</option>
            </c:forEach>
          </select>
        </div>
        <div class="col-md-3">
          <label class="form-label">Customer</label>
          <select name="customer.id" class="form-select" required>
            <option value="">-- Select Customer --</option>
            <c:forEach var="c" items="${customers}">
              <option value="${c.id}" <c:if test="${c.id eq entry.customer.id}">selected</c:if>>${c.name}</option>
            </c:forEach>
          </select>
        </div>
        <div class="col-md-3">
          <label class="form-label">Mode of Payment</label>
          <input type="text" name="modeOfPayment" class="form-control" value="${entry.modeOfPayment}"/>
        </div>
        <div class="col-md-3">
          <label class="form-label">Bird Count</label>
          <input type="number" name="birdCount" class="form-control" min="0" step="1" value="${entry.birdCount}"/>
        </div>
        <div class="col-md-3">
          <label class="form-label">Weight (kg)</label>
          <input type="number" name="weight" class="form-control" min="0" step="0.01" value="${entry.weight}" required/>
        </div>
        <div class="col-md-3">
          <label class="form-label">Unit Price (₹)</label>
          <input type="number" name="unitPrice" class="form-control" min="0" step="0.01" value="${entry.unitPrice}" required/>
        </div>
        <div class="col-md-3">
          <label class="form-label">Extra Charges (₹)</label>
          <input type="number" name="extraCharges" class="form-control" min="0" step="0.01" value="${entry.extraCharges}"/>
        </div>
        <div class="col-md-3">
          <label class="form-label">Final Price (₹)</label>
          <input type="number" name="finalPrice" class="form-control" min="0" step="0.01" value="${entry.finalPrice}" readonly/>
        </div>
        <div class="col-md-3">
          <label class="form-label">Received Amount (₹)</label>
          <input type="number" name="receivedAmount" class="form-control" min="0" step="0.01" value="${entry.receivedAmount}"/>
        </div>
        <div class="col-md-3">
          <label class="form-label">Balance Amount (₹)</label>
          <input type="number" name="balanceAmount" class="form-control" min="0" step="0.01" value="${entry.balanceAmount}" readonly/>
        </div>
        <div class="col-md-3">
          <label class="form-label">Book No/Bill No.</label>
          <input type="text" name="bookOrBillNo" class="form-control" value="${entry.bookOrBillNo}" required pattern=".*/.*" title="Must contain '/' symbol"/>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-12 text-end">
          <button class="btn btn-primary" type="submit">Update</button>
