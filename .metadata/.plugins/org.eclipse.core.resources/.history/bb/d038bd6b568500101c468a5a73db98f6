package com.poultry.controller;

import com.poultry.model.Van;
import com.poultry.service.VanService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.*;

@Controller
@RequestMapping("/vans")
public class VanController {

    @Autowired private VanService vanService;

    @GetMapping
    public String list(Model model) {
        model.addAttribute("vans", vanService.findAll());
        return "vans";
    }

    @PostMapping("/save")
    public String save(@ModelAttribute Van v) {
        vanService.save(v);
        return "redirect:/vans";
    }

    @GetMapping("/delete/{id}")
    public String delete(@PathVariable Long id) {
        vanService.delete(id);
        return "redirect:/vans";
    }
}
