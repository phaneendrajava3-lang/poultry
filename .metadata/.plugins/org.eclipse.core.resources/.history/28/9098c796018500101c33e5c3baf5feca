// src/main/java/com/poultry/model/Van.java
package com.poultry.model;

import javax.persistence.*;

@Entity
public class Van {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    // registration number
    @Column(name = "reg_no")              // <-- match your actual column name
    private String regNo;

    private String model;

    // e.g. "Active", "Service", "Inactive"
    @Column(name = "status")              // <-- change to your real column name if different
    private String status;

    // OPTIONAL: only if you use it in JSP/DB
    // private String capacity;

    // --- getters/setters ---
    public Long getId() { return id; }
    public void setId(Long id) { this.id = id; }

    public String getRegNo() { return regNo; }
    public void setRegNo(String regNo) { this.regNo = regNo; }

    public String getModel() { return model; }
    public void setModel(String model) { this.model = model; }

    public String getStatus() { return status; }
    public void setStatus(String status) { this.status = status; }

    // public String getCapacity() { return capacity; }
    // public void setCapacity(String capacity) { this.capacity = capacity; }
}
