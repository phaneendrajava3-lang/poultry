<!-- Bootstrap & Script -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function viewUser(username, email, role) {
        document.getElementById("viewUsername").innerText = username;
        document.getElementById("viewEmail").innerText = email;
        document.getElementById("viewRole").innerText = role;
        new bootstrap.Modal(document.getElementById('viewModal')).show();
    }

    function editUser(id, username, email, role) {
        document.getElementById("editId").value = id;
        document.getElementById("editUsername").value = username;
        document.getElementById("editEmail").value = email;
        document.getElementById("editRole").value = role;
        document.getElementById("editPassword").value = "";
        document.getElementById("editConfirmPassword").value = "";
        new bootstrap.Modal(document.getElementById('editModal')).show();
    }

    function validatePasswordMatch(form) {
        const pwd = form.querySelector('input[name="password"]').value;
        const confirmPwd = form.querySelector('input[name="confirmPassword"]').value;
        if (pwd !== confirmPwd) {
            alert("Password and Confirm Password must match.");
            return false;
        }
        return true;
    }
	
	<script>
	  function togglePassword(id) {
	    const field = document.getElementById(id);
	    field.type = field.type === "password" ? "text" : "password";
	  }

	  // Validate password match
	  document.getElementById("confirmPassword").addEventListener("input", () => {
	    const pwd = document.getElementById("password").value;
	    const confirmPwd = document.getElementById("confirmPassword").value;
	    const msg = document.getElementById("passwordMatchMessage");

	    if (pwd !== confirmPwd) {
	      msg.classList.remove("d-none");
	    } else {
	      msg.classList.add("d-none");
	    }
	  });

	  // Optional: Prevent form submission if passwords don't match
	  document.querySelector("form").addEventListener("submit", function (e) {
	    const pwd = document.getElementById("password").value;
	    const confirmPwd = document.getElementById("confirmPassword").value;
	    if (pwd !== confirmPwd) {
	      e.preventDefault();
	      alert("Passwords do not match!");
	    }
	  });
	</script>

</script>
</body>
</html>
